generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  votes     Vote[]
}

model Poll {
  id        Int      @id @default(autoincrement())
  question  String
  type      PollType // "short_text", "yes_no", or "multiple_choice"
  choices   String[] @default([]) // Comma-separated list of choices for "multiple_choice" polls
  votes     Vote[]
  createdAt DateTime @default(now())
}

model Vote {
  id        Int      @id @default(autoincrement())
  question  String
  type      PollType // "short_text", "yes_no", or "multiple_choice"
  choices   String[] @default([]) // Comma-separated list of choices for "multiple_choice" polls
  votes     Vote[]
  createdAt DateTime @default(now())
  poll      Poll     @relation(fields: [pollId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

enum PollType {
  SHORT_TEXT
  BOOLEAN
  CHOICES
}

model Vote {
  id        Int      @id @default(autoincrement())
  poll      Poll     @relation(fields: [pollId], references: [id])
  pollId    Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  vote      String
  createdAt DateTime @default(now())
}
